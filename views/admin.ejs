<!DOCTYPE html>
<html lang="en">
   <head>
      <meta charset="UTF-8">
      <meta name="viewport" content="width=device-width, initial-scale=1.0">
      <title>Admin Panel</title>
      <link rel="icon" href="images/favicon-admin.png" type="image/png">
      <link rel="stylesheet" href="css/bootstrap.min.css">
      <link rel="stylesheet" href="css/admin.css">
   </head>
   <body>
      <div class="container">
         <div class="header-container mb-4">
            <h1 class="header-title">Admin Panel</h1>
            <span class="total-count">Total All: </span>
            <span class="account-count"> Accounts: <span class="accounts-count"><%= users.length %> </span>
            <span class="creature-count"> | Characters: <span class="created-count"><%= creatureCount %> </span> 
            <span class="deleted-creature-count"> | Deleted Characters: <span class="deleted-count"><%= deletedCreatureCount %></span>
         </div>
         <!-- Ряд кнопок над таблицей -->
         <div class="button-row mb-3 d-flex">
            <div class="me-auto">
               <a href="/gameworld" class="btn btn-success">Game World Data</a>
               <!-- <a href="/view-deleted" class="btn btn-warning">Просмотреть удаленных</a> -->
               <a href="http://127.0.0.1:6605/Apps-State" class="btn btn-info">Apps-State</a>
               <a href="/system-stats" class="btn btn-secondary">System Stats</a>
            </div>
            <a href="/" class="btn btn-info">Go to website</a>
         </div>
         <table class="table table-striped table-bordered">
            <thead class="table-dark">
               <tr>
                  <th>#</th>
                  <th>UserName</th>
                  <th>Actions</th>
               </tr>
            </thead>
            <tbody>
               <% users.forEach((user, index) => { %>
               <tr>
                  <td><%= index + 1 %></td>
                  <td class="username-highlight"><%= user.UserName %></td>
                  <td>
                     <a href="/edit-character?userName=<%= user.UserName %>" class="btn btn-primary btn-custom">Edit Characters</a>
                     <a href="/add-deposit?userId=<%= user.UserId %>" class="btn btn-secondary btn-custom">Add Deposit</a>
                  </td>
               </tr>
               <% }) %>
            </tbody>
         </table>
      </div>
      <script src="js/bootstrap.bundle.min.js"></script>
   </body>
</html>